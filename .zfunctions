## Z shell functions

extract() {
  if [[ -z "$1" ]]; then
    print -P "usage: \e[1;36mextract\e[1;0m < filename >"
    print -P "       Extract the file specified based on the extension"
  elif [[ -f $1 ]]; then
    case ${(L)1} in
      *.tar.bz2)  tar -jxvf $1  ;;
      *.tar.gz)   tar -zxvf $1  ;;
      *.tar.xz)   tar -Jxvf $1  ;;
      *.bz2)      bunzip2 $1       ;;
      *.gz)       gunzip $1        ;;
      *.jar)      unzip $1       ;;
      *.rar)      unrar x $1       ;;
      *.tar)      tar -xvf $1      ;;
      *.tbz2)     tar -jxvf $1  ;;
      *.tgz)      tar -zxvf $1  ;;
      *.txz)      tar -Jxvf $1  ;;
      *.zip)      unzip $1            ;;
      *.Z)        uncompress $1 ;;
      *)          echo "Unable to extract '$1' :: Unknown extension"
    esac
  else
    echo "File ('$1') does not exist!"
  fi
}

pwgen() {
    if [ -z ${1} ]; then
        openssl rand -base64 9
    else
        for ((i=1; i<=${1}; i++)); do
            openssl rand -base64 9
        done | column
    fi
}

httptest() {
    if [ ${#} -ne 2 ]; then
        echo "Usage: httptest {host} {fqdn}"
    else
        (echo "GET / HTTP/1.1\nHOST: ${2}\n\n"; sleep 2) | telnet ${1} 80
    fi
}

